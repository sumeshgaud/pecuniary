@{
    ViewBag.Title = "Financial";
}
<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/Lib/Telerik/styles/kendo.default.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Lib/Telerik/styles/kendo.common.min.css" rel="stylesheet" type="text/css">

    @Styles.Render("~/bundles/Style/Lib")
    <link href="~/Content/Common/site.css" rel=" stylesheet" type="text/css">
    <link href="~/Content/Common/KendoCustom.css" rel=" stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">
    @RenderSection("styles", required: false)
    @Styles.Render("~/bundles/Style/Branding")
    @Scripts.Render("~/bundles/Scripts/Core")
    @Scripts.Render("~/bundles/Lib/Telerik")
    @{
        
    }
   
    @Styles.Render("~/bundles/Style/Branding")


    <style>
        .breadcrumb > li + li:before {
            content: "> " !important;
        }
        
    </style>

</head>
<body >
    <div class="navbar" role="navigation">
        <div class="container">           
                <a class="navbar-brand" href="#"> <img src="@Url.Content("~/Content/Images/logo.png")" /></a>            
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse pull-right top-menu" ng-cloak>
                <ul class="nav navbar-nav">                   

                    <li class="active"><a title="Phone"><span class="glyphicon glyphicon-phone"></span>0124 67404000</a></li>
                    <li class="active"><a href="@Url.Content("~/ContactUs/Index")" title="Contact Us"><span class="glyphicon glyphicon-envelope"></span>Contact Us</a></li>
                    
                </ul>
            </div>
        </div>

    </div>

    @RenderBody()
    <div id="footer">
        <div class="container">
            <nav class="pull-left">
                <ul class="nav navbar-nav">               
                   

                    <li><a href="#" title="Terms & Conditions">Terms & Conditions</a></li>
                    <li><a href="#" title="Privacy Policy">Privacy Policy</a></li>
                </ul>
            </nav>
            <p class="pull-right">Powered by : <a href="#" target="_blank">Alpha Bits</a></p>
        </div>
    </div>
    
    @RenderSection("scripts", required: false)
    

</body>

</html>
