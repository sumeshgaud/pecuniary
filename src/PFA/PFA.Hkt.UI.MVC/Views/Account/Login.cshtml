@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section styles{
    <link href="@Url.Content("~/Content/Views/login.css")" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        var ROOT = '@Url.Content("~/")';
        var response = {};
        response.success = @ViewBag.success;
        response.message = '@ViewBag.message';
    </script>
    <script src="@Url.Content("~/Scripts/Feature/Login.js")" type="text/javascript"></script>
}

<div class="container theme-showcase" data-ng-controller="LoginCtrl" ng-init="init()" role="main">
    <div class="page-header page-header-login">
        <h1>Content coming soon</h1>
        <p>this is also coming soon</p>
    </div>
    <div class="clearfix">
        <div class="col-sm-4 login-info-graphic">

        </div>
        <div class="col-sm-4 login-form panel-primary">

            <form id="loginForm" action="@Url.Content("~/Account/Login")" method="POST">
                <div class="additional-details-filter1 additional-details-filter-login clearfix application-login">

                    <span id="notification"></span>
                </div>

                <div class="form-group">
                    <label for="userName">Username</label>
                    <input type="text" class="form-control" id="userName" name="userName" required validationmessage="Enter Username" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required validationmessage="Enter Password" placeholder="Password" />
                </div>
                <div class="row forgot">
                    <div class="col-sm-9">
                        <div class="register-link">
                            <a href="@Url.Content("~/Account/Register")" title="Register Now">Register Now</a>
                        </div>
                        <a id="forgotPassword"
                           href="#forgotPassword"
                           class="forgot-link"
                           title="Forgot Password"
                           ng-click="openRecoverPassword()">Forgot Password</a>
                    </div>
                    <div class="col-sm-3 clearfix">
                        <input type="submit"
                               value="Login"
                               class="btn btn-primary pull-right pagination-arrow login-link"
                               ng-click="validateAndSubmit()"
                               title="Login" />
                    </div>
                </div>
                <div id="div-login-status" class="alert alert-danger" ng-hide="response.success">
                    <span id="error-message">{{response.message}}</span>
                    <button type="button" class="close" id="closeButton" ng-click="hideMessage()"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
